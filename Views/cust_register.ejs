<!DOCTYPE html>
<html lang="en">
  <link rel="stylesheet" type="text/css" href="/css/global.css">
  <link rel="stylesheet" type="text/css" href="/css/register.css">
  <script src="/js/jquery.js"></script>
  <%- include('./partials/head.ejs')%>
  <script>
    $('.nav-cust-home').removeClass('active');
    $('.nav-cust-list').addClass('active');
    $('.nav-cust-about').removeClass('active');
  </script>
<body>


  <form action="/cust_register/customer" class="register" method="POST">
    <div class="container">
      <img class="reg-img" src="/images/logo-test.jpg" alt="tanis mencion" >
      <p class="new-cust-inp">Sign Up  | New Customer</p>
      <p>Please fill in this form to add new customer.</p>
      <hr>
  
      <label for="fname"><b>First Name</b></label>
      <input type="text" placeholder="Enter First Name" name="FirstName" required>

      <label for="email"><b>Middle Name</b></label>
      <input type="text" placeholder="Enter Middle Name" name="MiddleName" required>

      <label for="lname"><b>Last Name</b></label>
      <input type="text" placeholder="Enter Last name" name="LastName" required>

      <label for="bdate"><b>Date of Birth</b></label>
      <input class="isDate" type="date" name="BirthDate" required>

      <label for="bnumber"><b>Phone Number</b></label>
      <input type="tel" id="phone" name="PhoneNumber" placeholder="09123456789" pattern="[0-9]{11}" required>

      <input class="isDisplay" type="hidden" name="DateJoined" >
      <input class="isDisplay" type="hidden" value="0" name="LatestPoints" >
      <input class="isDisplay" type="hidden" name="LatestTransac" >

      <div class="clearfix">
        <a class="cancelbtn" href="/cust_list">Cancel</a>
        <button type="submit" class="signupbtn">Sign Up</button>
      </div>
    </div>
  </form>
  <%- include('./partials/footer.ejs')%>
</body>

</html>